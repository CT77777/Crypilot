<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <%- include("modules/head") %>
        <link rel="stylesheet" href="../css/dist/swap.css">
</head>

<body>
    <!-- BS icons image -->
    <%- include("modules/icons") %>

        <!-- BS layout -->
        <div class="d-flex flex-nowrap">

            <!-- BS sidebar-->
            <%- include("modules/sidebarUser") %>

                <!-- BS vertical divider-->
                <%- include("modules/verticalDivider") %>

                    <div class="content-container">

                        <!-- BS header-->
                        <%- include("modules/headerUser") %>

                            <!-- personal main -->
                            <div class="container container-main">
                                <main class="">
                                    <form class="swap-form" action="/trade/swap/buy" method="POST">
                                        <div class="btn-group dropend">
                                            <button class="btn btn-secondary btn-lg selected-currency" type="button">
                                                Select a currency
                                            </button>
                                            <button type="button"
                                                class="btn btn-lg btn-secondary dropdown-toggle dropdown-toggle-split"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                <span class="visually-hidden">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-tokens">
                                            </ul>
                                        </div>
                                        <div class="form-floating">
                                            <input class="contract-address" type="text" name="tokenAddress"
                                                style="display: none">
                                            <input type="number" step="0.01" name="tokenAmount"
                                                class="form-control form-control-dark amount-swap" id="floatingPassword"
                                                placeholder="token amount" required>
                                            <label for="floatingPassword">Token amount</label>
                                        </div>
                                        <button class="btn btn-warning w-100 py-2 btn-buy" type="button">Buy</button>
                                        <button class="btn btn-warning w-100 py-2 btn-sell" type="button">Sell</button>
                                    </form>
                                </main>
                            </div>

                            <!-- BS footer-->
                            <%- include("modules/footer") %>

                    </div>

        </div>

        <!-- swapping status Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Swap Result</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Button trigger swapping status modal -->
        <button type="button" class="btn btn-primary trigger-btn" data-bs-toggle="modal" data-bs-target="#exampleModal"
            style="display: none;">
            trigger swapping status modal
        </button>

        <!-- BS login modal -->
        <%- include("modules/logInModal") %>

            <!-- BS v5.3 CDN JS-->
            <%- include("modules/bsJsCDN.ejs") %>

                <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
                <script type="module" src="../js/swap.js"></script>
</body>

</html>