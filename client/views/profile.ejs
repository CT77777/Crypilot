<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <%- include("modules/head") %>
        <link rel="stylesheet" href="../css/dist/profile.css">
</head>

<body>
    <!-- BS icons image -->
    <%- include("modules/icons") %>

        <!-- BS layout -->
        <div class="d-flex flex-nowrap">

            <!-- BS sidebar-->
            <%- include("modules/sidebarUser") %>

                <!-- BS vertical divider-->
                <%- include("modules/verticalDivider") %>

                    <div class="content-container">

                        <!-- BS header-->
                        <%- include("modules/headerUser") %>

                            <!-- personal main -->
                            <div class="container container-main">
                                <main class="">
                                    <span class="fs-2">
                                        <%=name %>
                                    </span>
                                    <img class="avatar" src=<%=picture %> >
                                    <div class="eth">
                                        <img class="eth-image" src="../images/ethereum.png">
                                        <span class="fs-1">
                                            <%=userEthBalance %> ETH
                                        </span>
                                        <span class="fs-5">
                                            $<%=(userEthBalance*1900).toFixed(2) %> USD
                                        </span>
                                    </div>
                                </main>
                            </div>

                            <!-- BS footer-->
                            <%- include("modules/footer") %>

                    </div>

        </div>

        <!-- BS login modal -->
        <%- include("modules/logInModal") %>

            <!-- BS v5.3 CDN JS-->
            <%- include("modules/bsJsCDN.ejs") %>

                <script>
                    localStorage.setItem('userInfo', `<%- JSON.stringify(userInfo) %>`);
                </script>
                <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
                <script type="module" src="../js/profile.js"></script>
</body>

</html>